@{
    ViewBag.Title = "Home Page";
}
<div class="row">
    <div class="col-md-9">
        <div class="product-info">
            <img src="~/img/VanGogh.jpg" alt="Alternate Text" />
            <h3>Mug</h3>
            <ul class="product-props">
                <li>Price: $9.99</li>
                <li>Artist: Van Gogh</li>
                <li>Title: </li>
                <li>Description: Self-portrait</li>
            </ul>
            <button id="buyButton" class="btn btn-success">Buy</button>
        </div>

        <div id="theForm">
            <form action="/" method="post">
                <label>Username:</label>
                <br />
                <input type="" value="" />
                <br />
                <label>Email:</label>
                <br />
                <input type="email" name="name" value="" />
                <br />
                <label>Subject:</label>
                <br />
                <input type="" name="name" value="" />
                <br />
                <label>Message:</label>
                <br />
                <textarea name cols="" rows="4"></textarea>
                <br />
                <input type="submit" name="name" value="Send Message" />
            </form>
        </div>

        <div>
            <div id="loginToggle">Login</div>
            <form class="popup-form">
                <div>
                    <label>Username</label>
                    <input />
                </div>
                <div>
                    <label>Password</label>
                    <input type="password" />
                </div>
                <div>
                    <input type="checkbox" />
                    <label>Remember Me?</label>
                </div>
                <div>
                    <input type="submit" />
                </div>
            </form>
        </div>
    </div>
    <div class="col-md-3">
        <p>This ia func site to do some buying of dutch products.</p>
    </div>
</div>